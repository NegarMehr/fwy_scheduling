function [n_next, l_next, f_cur] = fwyDynamics(n_cur, l_cur, r_cur, params)
% extracting parameters
v = params.v;
w = params.w;
f_bar = params.f_bar;
n_bar = params.n_bar;
beta_bar = 1 - params.beta;
or_d = params.d;
ml_d = params.d_up;
has_or = params.has_or;

M = 500;
% downstream densities
n_bar_dwn = [n_bar(2:end);M];
n_cur_dwn = [n_cur(2:end);0];
% mainline flows
f_cur = min([beta_bar.* v.*(n_cur) f_bar w.*(n_bar_dwn - n_cur_dwn)],[],2);
% assigning or flows
or_ind = find(has_or);
r_vect = zeros(size(v,1),1);
r_vect(or_ind) = r_cur;
n_next = n_cur - beta_bar.^(-1)*f_cur + r_vect + 